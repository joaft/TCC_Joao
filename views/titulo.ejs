<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Produtos</title>
  <base href="/titulo">
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <header>
    <p id="cabecalho">
      <a href="produtos">HOME</a>
      <a href="titulo" id="cadastrar">CADASTRAR CARD</a>
    </p>
  </header>

  <main>
    <h1> CADASTRO DE CARD </h1>
    <form method="post" id="form" >
      <section >
        <div>
          <p> Título </p>
          <input type="text" name="nome" placeholder="Digite o título" id="atv">
        </div>

        <div class="pai">
          <div>
            <p>Subtítulo</p>
            <input type="text" name="descricao" placeholder="Digite o subtítulo" id="atv">
          </div>
          <div>
            <p> Resumo </p>
            <input type="text" name="resumo" placeholder="Digite o resumo" id="atv">
          </div>
        </div>

          <div>
            <p> Conteúdo </p>
            <input type="text" name="marca" placeholder="Digite o conteúdo" id="atv">
          </div>
        </div>

        <div>
          <p> Escolha uma imagem </p>
          <input type="file" name="imagem" id="imagem-input">
        </div>

        <div>
          <p> Categoria </p>
          <select name="categoria" id="categoria">
            <option value="Todas">Todas as Categorias</option>
            <option value="pre">Pré-história</option>
            <option value="antiga">Idade antiga</option>
            <option value="media">Idade média</option>
            <option value="moderna">Idade moderna</option>
            <option value="contemporânea">Idade contemporânea</option>
          </select>

        </div>

        <input type="reset" value="Apagar" id="env">
        <input type="submit" value="Enviar" id="env">
      </section>

    </form>
    <div id="cadastrados">
      <h1> CARDS CADASTRADOS </h1>

      <table>
        <tr>
          <th>Título</th>
          <th>Subtítulo</th>
          <th>Resumo</th>
          <th>Conteúdo
           
            <th>Imagem</th>
            <th>Categoria</th>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </th>
          <th>Editar</th>
          <th>Deletar</th>
        </tr>
        <%Batatas.forEach(function(titulo){%>
        <tr>
          <td><%=titulo.nome%></td>
          <td><%=titulo.descricao%></td>
          <td><%=titulo.resumo%></td>
          <td><%=titulo.marca%></td>
          <td><%=titulo.imagem%></td>
          <td><%=titulo.categoria%></td>
          <td><a href="/editar/<%=titulo._id%>"> <img src="editar.png" width="20px"></a></td>
          <td><a href="/deletar/<%=titulo._id%>"><img src="deletar.png" width="20px"></a></td>
        </tr>
        <%})%>

      </table>
    </div>
  </main>
  
</body>

</html>